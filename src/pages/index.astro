---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import Hero from '@components/Hero.astro'
import FeaturedProjects from '@components/FeaturedProjects.astro'
import Skills from '@components/Skills.astro'
import Narrative from '@components/Narrative.astro'
import FeaturedPosts from '@components/FeaturedPosts.astro'
import Contact from '@components/Contact.astro'
---

<DefaultLayout title="Home">
  
  <!-- 1. HERO (Full Viewport Height) -->
  <Hero />

  <!-- 2. MOBILE PROJECTS (Hidden on Desktop, Visible on Mobile) -->
  <div class="lg:hidden">
    <FeaturedProjects />
  </div>

  <!-- 3. SKILLS (Standard BG) -->
  <Skills />

  <!-- 4. NARRATIVE (Tinted BG) -->
  <Narrative />

  <!-- 5. BLOG (Standard BG) -->
  <FeaturedPosts />

  <!-- 6. CONTACT (Tinted BG) -->
  <Contact />

</DefaultLayout>