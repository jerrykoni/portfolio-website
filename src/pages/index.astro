---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import Hero from '@components/Hero.astro'
import FeaturedProjects from '@components/FeaturedProjects.astro'
import Skills from '@components/Skills.astro'
import Narrative from '@components/Narrative.astro'
import FeaturedPosts from '@components/FeaturedPosts.astro'
import Contact from '@components/Contact.astro'
---

<DefaultLayout title="Home">
  
  <!-- 1. HERO (Standard BG) -->
  <Hero />

  <!-- 2. PROJECTS (Tinted BG) -->
  <FeaturedProjects />

  <!-- 3. SKILLS (Standard BG) -->
  <!-- Note: Make sure Skills.astro uses py-16 inside it too! -->
  <Skills />

  <!-- 4. NARRATIVE (Tinted BG) -->
  <Narrative />

  <!-- 5. BLOG (Standard BG) -->
  <FeaturedPosts />

  <!-- 6. CONTACT (Tinted BG) -->
  <Contact />

</DefaultLayout>