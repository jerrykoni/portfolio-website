---
import DefaultLayout from '../../layouts/DefaultLayout.astro'
import { Card, Pagination } from 'accessible-astro-components'
import { getCollection } from 'astro:content'
// 1. IMPORT THE TYPES
import type { PaginateFunction } from 'astro'

// Import images directly
import postImage1 from '@assets/images/posts/post-image-1.png'
import postImage2 from '@assets/images/posts/post-image-2.png'
import postImage3 from '@assets/images/posts/post-image-3.png'
import postImage4 from '@assets/images/posts/post-image-4.png'
import postImage5 from '@assets/images/posts/post-image-5.png'
import postImage6 from '@assets/images/posts/post-image-6.png'

// 2. ADD TYPE ANNOTATION HERE
export async function getStaticPaths({ paginate }: { paginate: PaginateFunction }) {
  const allPosts = await getCollection('blog')
  
  const sortedPosts = allPosts.sort((a, b) => {
    return new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf()
  })

  const postImages = [postImage1, postImage2, postImage3, postImage4, postImage5, postImage6]

  const postsWithImages = sortedPosts.map((post, index) => {
    return {
      ...post,
      featuredImage: postImages[index % postImages.length],
    }
  })

  return paginate(postsWithImages, { pageSize: 6 })
}

// 3. DEFINE PROPS FOR THE PAGE
const { page } = Astro.props
---

<DefaultLayout
  title="Research & Articles"
  description="My technical writings and opinions on Game Dev papers."
>
  <section class="my-12">
    <div class="container">
      <h1 class="text-5xl font-bold mb-4">Research & Articles</h1>
      <p class="text-xl mb-12 text-gray-600 dark:text-gray-300">
        Deep dives into Audio-Haptics, VR navigation, and AI tools.
      </p>

      <p class="text-sm text-gray-500 mb-4">
        <em>Showing {page.start + 1}-{page.end + 1} of {page.total} articles</em>
      </p>

      <ul class="my-3 grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
        {
          // We use 'any' here to bypass complex type checks for the mapped post
          page.data.map((post: any) => (
            <li>
              <Card
                url={'/blog/' + post.slug}
                title={post.data.title}
                footer={'Posted: ' + post.data.publishDate.toISOString().slice(0, 10)}
                imageComponent={post.featuredImage}
              >
                {post.data.description}
              </Card>
            </li>
          ))
        }
      </ul>

      {
        page.lastPage > 1 && (
          <div class="mt-12 grid place-content-center">
            <Pagination
              firstPage={page.url.prev ? '/blog' : null}
              previousPage={page.url.prev ? page.url.prev : null}
              nextPage={page.url.next ? page.url.next : null}
              lastPage={page.url.next ? `/blog/${page.lastPage}` : null}
              currentPage={page.currentPage}
              totalPages={page.lastPage}
            />
          </div>
        )
      }
    </div>
  </section>
</DefaultLayout>